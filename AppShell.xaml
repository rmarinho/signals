<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="signals.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:signals.Pages"
    Title="signals">

    <Tab>
        <ShellContent
            Title="Technical"
            ContentTemplate="{DataTemplate pages:TechnicalPage}"
            Route="technical"/>
        <ShellContent
            Title="Market"
            ContentTemplate="{DataTemplate pages:MarketPage}"
            Route="market"/>
        <ShellContent
            Title="Price"
            ContentTemplate="{DataTemplate pages:PricePage}"
            Route="price"/>
        <ShellContent
            Title="SEC"
            ContentTemplate="{DataTemplate pages:SECPage}"
            Route="sec"/>

        <ShellContent
            Title="News"
            ContentTemplate="{DataTemplate pages:NewsPage}"
            Route="news"/>
    </Tab>
</Shell>

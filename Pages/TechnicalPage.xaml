<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="signals.Pages.TechnicalPage"
             xmlns:vms="clr-namespace:signals.ViewModels"
             xmlns:views="clr-namespace:signals.Views"
             xmlns:models="clr-namespace:signals.Models"
             x:DataType="vms:MainViewModel"
             Background="#111827">
       <ContentPage.Resources>
              <DataTemplate x:Key="StockTemplate"
                            x:DataType="models:StockItem">
                     <views:StockView/>
              </DataTemplate>
       </ContentPage.Resources>

       <HorizontalStackLayout BindableLayout.ItemsSource="{Binding Stocks}"
                              BindableLayout.ItemTemplate="{StaticResource StockTemplate}"
                              Spacing="10"/>


</ContentPage>
